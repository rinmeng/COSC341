<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/bToQ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/textGotoQ1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/textQ2"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:entries="@array/spinner1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQ" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:entries="@array/spinner2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:entries="@array/spinner3"
        app:layout_constraintEnd_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        android:entries="@array/spinner3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <TextView
        android:id="@+id/firstCourseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:text="@string/firstCourse"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQ" />

    <TextView
        android:id="@+id/secondCourseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secondCourse"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/firstCourseText"
        app:layout_constraintTop_toBottomOf="@+id/firstCourseText" />

    <TextView
        android:id="@+id/thirdCourseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thirdCourse"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/secondCourseText"
        app:layout_constraintTop_toBottomOf="@+id/secondCourseText" />

    <TextView
        android:id="@+id/fourthCourseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fourthCourse"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/thirdCourseText"
        app:layout_constraintTop_toBottomOf="@+id/thirdCourseText" />

    <TextView
        android:id="@+id/selectionOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/selectionOutput"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/fourthCourseText"
        app:layout_constraintTop_toBottomOf="@+id/fourthCourseText" />

    <Button
        android:id="@+id/bSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/showSummary"
        app:layout_constraintBottom_toTopOf="@+id/bToQ1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>